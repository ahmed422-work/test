<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <!-- meta and links start -->
    <%- include('templet/meta')-%>
</head>

<body>
    <%- include('templet/preloder_topbar_sidebar',{titel:"Pay Out"})-%>

        <!--********** Content body start **********-->

        <div class="content-body">

            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card mb-3">
                            <div class="card-body pb-">
                                
                                <h3><%=storname%></h3>

                                <div class="nav">
                                    <ul class="nav nav-tabs page-header-tabs shadow-sm">
                                        <li class="nav-item">
                                          <a class="nav-link active" href="/account/payoutdetails/<%= storeid %>">Account Detail</a>
                                        </li>
                                        <li class="nav-item">
                                          <a class="nav-link" href="/account/payoutransections/<%= storeid %>">Transection List</a>
                                        </li>
                                        
                                      </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Account List</h3>
                            </div>

                            <div class="card-body">
                                <div class="table-responsive">
                                    <table
                                        class="table table-bordered table-striped verticle-middle table-responsive-sm">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Account Info</th>
                                                <th scope="col">Balance Info</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% account_list.forEach(function(data, i){ %>
                                            <tr>
                                                <td><%= i + 1%></td>
                                                <td>
                                                    <div> <b><%= data.ac_name %></b> </div>
                                                    <div> <b><%= data.ac_number %></b> </div>
                                                    <div> <b><%= data.store_name %></b> </div>
                                                    <div> <%= data.ac_decrip %> </div>
                                                </td>
                                                <td>
                                                    <div> Balance :- <b><%= data.balance %> </b> </div>
                                                    <div> Total in :- <b><%= data.credit %></b> </div>
                                                    <div> Total out :- <b><%= data.debit %></b> </div>
                                                </td>
                                                
                                            </tr>

                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>

        <!--********** Content body end **********-->

        </div>
        <!--**********************************
            Footer start
        ***********************************-->
        <div class="footer">
            <div class="copyright">
                <p>Copyright Â© Designed &amp; Developed by <a href="#" target="_blank">KMS</a> 2023</p>
            </div>
        </div>
        <!--**********************************
            Footer end
        ***********************************-->

        </div>

        <!--********** Main wrapper end **********-->
        <%- include('templet/script')-%>
            

</body>

</html>